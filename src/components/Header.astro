        <nav class="navlinks flex justify-center items-center ml-24">
            <a href="/" class={`${currentPath === '/' ? 'text-black' : 'text-white hover:text-stone-300 transition-all duration-300'}  font-extralight h-full p-3 flex justify-center items-center`}>Inicio</a>

